<?import javafx.scene.layout.AnchorPane?>
<?import java.net.URL?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<AnchorPane fx:controller="tr.com.billiards.view.MainController"
            xmlns:fx="http://javafx.com/fxml">
    <stylesheets>
        <URL value="@../css/main.css"/>
    </stylesheets>
    <fx:include fx:id="appBar" source="AppBar.fxml" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"/>
    <VBox spacing="50" AnchorPane.bottomAnchor="20">
        <Button text="PLAY" onMouseClicked="#playGame"/>
        <Button text="PAUSE" onMouseClicked="#pauseGame"/>
        <Button text="NOGAME" onMouseClicked="#noGame"/>
    </VBox>

</AnchorPane>