<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import tr.com.billiards.view.core.component.CustomImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:id="appBarRoot" styleClass="app-bar"
      fx:controller="tr.com.billiards.view.widget.AppBarController">
    <CustomImageView fx:id="homeIcon" pickOnBounds="true" imageName="home.png" fitHeight="100" fitWidth="100" AnchorPane.leftAnchor="0"/>
    <HBox alignment="CENTER" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" pickOnBounds="false">
        <VBox alignment="CENTER">
            <Label fx:id="gameTime" text="00:00" visible="false"/>
        </VBox>

    </HBox>
    <HBox fx:id="actionBox" spacing="20" AnchorPane.rightAnchor="0" visible="false">
        <CustomImageView fx:id="minusIcon" pickOnBounds="true" imageName="minus.png" fitHeight="100" fitWidth="100"/>
        <CustomImageView fx:id="okIcon" pickOnBounds="true" imageName="ok.png" fitHeight="100" fitWidth="100"/>
        <CustomImageView fx:id="plusIcon" pickOnBounds="true" imageName="plus.png" fitHeight="100" fitWidth="100"/>
    </HBox>
    <CustomImageView fx:id="settingsIcon" pickOnBounds="true" imageName="settings.png" fitHeight="100" fitWidth="100" AnchorPane.rightAnchor="0"/>
</AnchorPane>
